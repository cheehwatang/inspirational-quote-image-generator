<%= form_with model: @article do |f| %>
  <div class="form-group my-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group my-4">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: '6' %>
  </div>
  <%= f.submit class: 'border border-0 p-2' %>
<% end %>
