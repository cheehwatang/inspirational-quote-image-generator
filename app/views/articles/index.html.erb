<% if alert %>
  <div class="alert alert-info d-flex justify-content-between align-items-center">
    <%= alert %>
    <button class="btn bg-transparent text-muted border-0" data-dismiss="alert" onclick="this.parentElement.classList.add('d-none');">
      <i class="fa-sharp fa-solid fa-xmark"></i>
    </button>
  </div>
<% end %>

<% @articles.each do |article| %>
  <div class='my-2'>
    <%= link_to article.title, article_path(article), class: 'text-decoration-none fs-3' %>
    <p><%= article.content %></p>
  </div>
<% end %>
